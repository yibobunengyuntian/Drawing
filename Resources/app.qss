QWidget {
	font-family: "Microsoft YaHei";
}

QScrollArea {
    background: transparent;
    border: none;
}

QPushButton {
    background-color: white;
    border: none;
    color: black;
    font-size: 16px;
    border-radius: 4px;
}

QPushButton:hover {
    background-color: #f0f0f0;
    border: 1px solid black;
}

QPushButton:pressed {
    background-color: #f3f3f3;
    border: 1px solid black;
}

QPushButton:checked
{
    background-color: #f3f3f3;
    border: 2px solid #003e92;
}

QPushButton:disabled {
    background-color: white;
    color: #666666;
}

QToolButton {
    background-color: white;
    border: none;
    color: black;
    font-size: 16px;
    border-radius: 4px;
}

QToolButton:hover {
    background-color: #f0f0f0;
